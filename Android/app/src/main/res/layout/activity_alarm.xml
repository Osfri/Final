    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            tools:context=".LinearActivity">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    tools:context=".LinearActivity">
                <TextView
                        android:id="@+id/ampmTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="25sp"
                        android:layout_marginTop="364dp"
                        android:layout_gravity="left"
                        app:layout_constraintBottom_toTopOf="@id/onOffButton"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:text="AM"
                        app:layout_constraintHorizontal_bias="0.32"
                        app:layout_constraintVertical_bias="0.043"
                        app:layout_constraintTop_toTopOf="@+id/timeTextView"/>

                <TextView
                        android:id="@+id/timeTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="50sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_chainStyle="packed"
                        tools:text="09:30"/>
            </LinearLayout>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="2"
                tools:context=".LinearActivity">

            <Button
                    android:id="@+id/changeAlarmTimeButton"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:text="시간재설정"
                    android:layout_gravity="bottom"
                    android:background="@drawable/button_round_original"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
            <Button
                    android:id="@+id/onOffButton"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:text="알람끄기"
                    android:layout_weight="1"
                    android:background="@drawable/button_round"
                    android:layout_gravity="bottom"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toTopOf="@id/changeAlarmTimeButton"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

        </LinearLayout>
    </LinearLayout>

    <include
            layout="@layout/ham_appbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    <com.google.android.material.navigation.NavigationView
            android:id="@+id/nav_Alarm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:menu="@menu/ham_menu_list"
            android:fitsSystemWindows="true"
            app:headerLayout="@layout/ham_header"/>





</androidx.drawerlayout.widget.DrawerLayout>