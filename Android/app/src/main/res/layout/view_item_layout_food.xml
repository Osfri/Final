<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        tools:context=".MainActivity">


    <TextView
            android:id="@+id/foodRecycleViewDate"
            android:text="날짜 표시"
            android:layout_width="344dp"
            android:layout_height="43dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="28dp"/>

    <TextView
            android:id="@+id/foodRecycleViewMenu"
            android:text="중식 메뉴 표시"
            android:layout_width="342dp"
            android:layout_height="63dp"
            app:layout_constraintStart_toStartOf="@+id/foodRecycleViewDate"
            app:layout_constraintTop_toBottomOf="@+id/foodRecycleViewDate"
            android:layout_marginTop="12dp"/>

    <ImageView
            android:id="@+id/foodRecycleViewImage"
            android:layout_width="137dp"
            android:layout_height="117dp"
            tools:srcCompat="@tools:sample/avatars"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@+id/foodRecycleViewDate"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            app:layout_constraintVertical_bias="0.058"/>

</androidx.constraintlayout.widget.ConstraintLayout>