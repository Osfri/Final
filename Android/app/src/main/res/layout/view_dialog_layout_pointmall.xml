<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <TextView
            android:text="구매 수량"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView4"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="36dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:textSize="20sp" android:textStyle="bold"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <Button
                android:text="-"
                android:layout_width="wrap_content"
                android:background="#00ff0000"
                android:layout_height="50dp" android:id="@+id/pointmall_dialog_minusBtn"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" android:textSize="25dp"/>
        <TextView
                android:text="1"
                android:layout_width="wrap_content"
                android:layout_height="50dp" android:id="@+id/pointmall_dialog_cnt"
                android:gravity="center"
                android:textSize="20sp" android:layout_marginStart="30dp"
                app:layout_constraintStart_toEndOf="@+id/pointmall_dialog_minusBtn"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/pointmall_dialog_plusBtn"
                android:layout_marginEnd="30dp"/>
        <Button
                android:text="+"
                android:layout_width="wrap_content"
                android:background="#00ff0000"
                android:layout_height="50dp" android:id="@+id/pointmall_dialog_plusBtn"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:textSize="25dp"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>