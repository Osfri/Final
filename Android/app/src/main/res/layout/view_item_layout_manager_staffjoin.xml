<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="80dp">

    <TextView
            android:id="@+id/managerRecycleViewWaitName"
            android:text="맴버정보"
            android:layout_width="231dp"
            android:layout_height="36dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="28dp" android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.058"/>

    <Button
            android:id="@+id/manage_btn_staffok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00ff0000"
            android:textColor="@color/pointred"
            android:textStyle="bold"
            android:text="승인"
            android:textSize="14dp"

            app:layout_constraintStart_toEndOf="@+id/managerRecycleViewWaitName"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="92dp"/>
    <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="#D6D6D6"
            tools:ignore="MissingConstraints"

            app:layout_constraintTop_toTopOf="@+id/manage_btn_staffok"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/manage_btn_staffcancel"
            app:layout_constraintHorizontal_bias="0.979"
            app:layout_constraintBottom_toBottomOf="@+id/manage_btn_staffcancel"/>
    <Button
            android:id="@+id/manage_btn_staffcancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00ff0000"
            android:textColor="@color/likeblue"
            android:textSize="14dp"
            android:textStyle="bold"
            android:text="거절"

            app:layout_constraintStart_toEndOf="@+id/manage_btn_staffok"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="24dp"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D6D6D6" tools:ignore="MissingConstraints"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="79dp" android:id="@+id/view" app:layout_constraintStart_toStartOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>