<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".calendar.CalendarActivity">

    <TextView
            android:id="@+id/calTitleTextView"
            android:text="일정표 메뉴"
            android:layout_width="312dp"
            android:layout_height="71dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent" android:textSize="34sp"/>

    <CalendarView
            android:id="@+id/calCalendarView"
            android:layout_width="537dp"
            android:layout_height="349dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/calTitleTextView"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"/>

    <Button
            android:id="@+id/calSaveBtn"
            android:text="일정 저장"
            android:layout_width="189dp"
            android:layout_height="89dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/calContentEditText"
            android:layout_marginEnd="204dp" android:layout_marginTop="48dp"/>


    <EditText
            android:id="@+id/calContentEditText"
            android:layout_width="560dp"
            android:layout_height="64dp"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintTop_toBottomOf="@+id/calCalendarView"
            android:layout_marginTop="216dp"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/calRecyclerView"
            android:layout_width="596dp"
            android:layout_height="211dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/calCalendarView" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintStart_toStartOf="parent"/>
    <FrameLayout
            android:id="@+id/calFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>