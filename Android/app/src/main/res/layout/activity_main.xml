<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".MainActivity" >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginBottom="5dp"
                android:text="로그인"
                android:textSize="34sp"
                android:background="#424242  "
                android:textColor="#FFFFFF"/>

        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnChat"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:text="1:1 채팅"
                android:textSize="34sp" android:textColor="#FFFFFF"
                android:background="#1b1b1b" android:backgroundTint="#1b1b1b"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnBbs"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:text="공지사항"
                android:layout_marginBottom="5dp"
                android:textSize="34sp"
                android:backgroundTint="#FFA41D"
                android:textColor="#FFFFFF"/>

        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnLunch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:text="식단표"
                android:layout_marginBottom="10dp"
                android:textSize="34sp"
                android:background="#e0e0e0"
                android:textColor="#000000"/>
    </LinearLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnCalender"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:text="일정표"
                android:textSize="34sp"
                android:background="#424242"
                android:textColor="#FFFFFF"
        />
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnHoliday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="오프(휴일)신청란"
                    android:layout_marginBottom="10dp"
                    android:textSize="34sp"
                    android:background="#717171"
                    android:textColor="#FFFFFF"
            />
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnPointMall"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:text="포인트몰"
                        android:textSize="34sp"
                        android:background="#aeaeae"/>

                <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnFirstScreen"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:text="FirstScreen"
                        android:textSize="34sp" android:background="#424242 " android:textColor="#FFFFFF"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>

