<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              tools:context=".MainActivity" >

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            tools:context=".LinearActivity">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="13dp"
                tools:context=".LinearActivity">

            <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnBbs"
                    android:text="공지사항"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:layout_marginRight="20dp"
                    android:textSize="14dp"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:paddingTop="10dp"
                    android:paddingBottom="7dp"
                    android:drawableTop="@drawable/ic_menu_bbs"
                    android:fontFamily="@font/nanumbarungothic"
                    android:background="@drawable/button_main_menu"/>


            <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnChat"
                    android:text="1:1 채팅"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:layout_marginRight="20dp"
                    android:textSize="14dp"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:paddingTop="10dp"
                    android:paddingBottom="7dp"
                    android:drawableTop="@drawable/ic_menu_chat"
                    android:fontFamily="@font/nanumbarungothic"
                    android:background="@drawable/button_main_menu"/>

            <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnManager"
                    android:text="관리자"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:layout_marginRight="20dp"
                    android:textSize="14dp"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:paddingTop="10dp"
                    android:paddingBottom="7dp"
                    android:drawableTop="@drawable/ic_menu_mana"
                    android:fontFamily="@font/nanumbarungothic"
                    android:background="@drawable/button_main_menu"/>


        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="13dp"
                tools:context=".LinearActivity">


            <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnLunch"
                    android:text="식단표"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:layout_marginRight="20dp"
                    android:textSize="14dp"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:paddingTop="10dp"
                    android:paddingBottom="7dp"
                    android:drawableTop="@drawable/ic_menu_food"
                    android:fontFamily="@font/nanumbarungothic"
                    android:background="@drawable/button_main_menu">
            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnCalender"
                    android:text="일정"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:layout_marginRight="20dp"
                    android:textSize="14dp"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:paddingTop="10dp"
                    android:paddingBottom="7dp"
                    android:drawableTop="@drawable/ic_menu_cal"
                    android:fontFamily="@font/nanumbarungothic"
                    android:background="@drawable/button_main_menu"/>


            <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnHoliday"
                    android:text="off신청"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:layout_marginRight="20dp"
                    android:textSize="14dp"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:paddingTop="10dp"
                    android:paddingBottom="7dp"
                    android:drawableTop="@drawable/ic_menu_off"
                    android:fontFamily="@font/nanumbarungothic"
                    android:background="@drawable/button_main_menu"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="13dp"
                tools:context=".LinearActivity">

            <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnPointMall"
                    android:text="포인트몰"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:layout_marginRight="20dp"
                    android:textSize="14dp"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:paddingTop="10dp"
                    android:paddingBottom="7dp"
                    android:drawableTop="@drawable/ic_menu_mall"
                    android:fontFamily="@font/nanumbarungothic"
                    android:background="@drawable/button_main_menu"/>
            <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnAlarm"
                    android:text="알람"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:layout_marginRight="20dp"
                    android:textSize="14dp"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:paddingTop="10dp"
                    android:paddingBottom="7dp"
                    android:drawableTop="@drawable/ic_menu_alarm"
                    android:fontFamily="@font/nanumbarungothic"
                    android:background="@drawable/button_main_menu"/>


            <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnPhoneNumber"
                    android:text="연락처"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:layout_marginRight="20dp"
                    android:textSize="14dp"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:paddingTop="10dp"
                    android:paddingBottom="7dp"
                    android:drawableTop="@drawable/ic_menu_phone"
                    android:fontFamily="@font/nanumbarungothic"
                    android:background="@drawable/button_main_menu"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:context=".LinearActivity">

            <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnFirstScreen"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:text="login after"
                    android:textSize="12dp"
                    android:background="@drawable/button_main_menu"
                    android:textColor="#FFFFFF"/>


            <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnLogin"
                    android:text="로그인"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:layout_marginRight="20dp"
                    android:textSize="14dp"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:paddingTop="10dp"
                    android:paddingBottom="7dp"
                    android:drawableTop="@drawable/ic_menu_login"
                    android:fontFamily="@font/nanumbarungothic"
                    android:background="@drawable/button_main_menu"/>


        </LinearLayout>

    </LinearLayout>
</LinearLayout>

