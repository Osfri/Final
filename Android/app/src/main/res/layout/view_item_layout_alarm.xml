<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        tools:context=".MainActivity">


    <!-- view = 선 한줄 -->
    <TextView
            android:id="@+id/alramRecycleViewTime"
            android:text="알람 시간 표시 칸"
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="44dp"/>
    <Switch
            android:id="@+id/alramRecycleViewSwitch"
            android:layout_width="47dp"
            android:layout_height="41dp"
            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toEndOf="@+id/alramRecycleViewTime"
            app:layout_constraintTop_toTopOf="@+id/alramRecycleViewTime" android:layout_marginStart="220dp"
    />
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="#D6D6D6" tools:ignore="MissingConstraints"/>
</androidx.constraintlayout.widget.ConstraintLayout>