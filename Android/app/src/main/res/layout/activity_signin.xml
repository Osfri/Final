<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ImageView
            android:background="@drawable/ic_logo_ho"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="112dp"/>
    <EditText
            android:layout_width="450dp"
            android:layout_height="48dp"
            android:inputType="textPersonName"
            android:ems="10"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/signin_email" android:hint="이메일을 입력해주세요" android:layout_marginTop="256dp"
            android:layout_marginStart="40dp" android:layout_marginEnd="40dp" android:textSize="12sp"/>
    <Button
            android:text="로그인"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:textColor="@color/white"
            android:layout_height="wrap_content" android:id="@+id/btn_btin"
            android:background="@drawable/button_round"
            app:layout_constraintStart_toStartOf="@+id/signin_pw"
            app:layout_constraintEnd_toEndOf="@+id/signin_pw"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/signin_pw"
            android:layout_marginTop="52dp"/>
    <TextView
            android:text="아직 계정이 없으신가요?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="80dp"
            app:layout_constraintTop_toTopOf="@+id/signin_move"/>
    <TextView
            android:text="회원가입"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content" android:id="@+id/signin_move"
            android:textSize="16sp" android:textColor="#878787" app:layout_constraintEnd_toEndOf="@+id/btn_btin"
            app:layout_constraintTop_toBottomOf="@+id/btn_btin"
            android:layout_marginTop="12dp" android:layout_marginEnd="8dp"/>
    <com.google.android.gms.common.SignInButton
            android:id="@+id/googlesignin"
            android:layout_width="383dp"
            android:layout_height="67dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_btin"
            android:layout_marginTop="96dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ImageButton
            android:id="@+id/kakao_login_button"
            android:layout_width="380dp"
            android:layout_height="60dp"
            android:src="@drawable/kakao_login_large_narrow"
            android:background="@android:color/transparent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="@+id/googlesignin"
            app:layout_constraintEnd_toEndOf="@+id/googlesignin" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/googlesignin" app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/signin_pw"
            android:hint="비밀번호를 입력해주세요" app:layout_constraintEnd_toEndOf="@+id/signin_email"
            app:layout_constraintStart_toStartOf="@+id/signin_email" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/signin_email" android:textSize="12sp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <CheckBox
            android:text="자동로그인"
            android:layout_width="104dp"
            android:layout_height="48dp"
            app:layout_constraintStart_toStartOf="@+id/signin_pw"
            app:layout_constraintTop_toBottomOf="@+id/signin_pw"
            android:id="@+id/Signin_autoin"/>
</androidx.constraintlayout.widget.ConstraintLayout>