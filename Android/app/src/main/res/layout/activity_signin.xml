<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="450dp"
            android:layout_height="48dp"
            android:inputType="textPersonName"
            android:ems="10"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/signin_email" android:hint="이메일을 입력해주세요" android:layout_marginTop="120dp"
            android:layout_marginStart="40dp" android:layout_marginEnd="40dp" android:textSize="12sp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/signin_pw"
            android:hint="비밀번호를 입력해주세요" app:layout_constraintEnd_toEndOf="@+id/signin_email"
            app:layout_constraintStart_toStartOf="@+id/signin_email" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/signin_email" android:textSize="12sp"/>
    <CheckBox
            android:text="자동로그인"
            android:layout_width="104dp"
            android:layout_height="48dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="76dp"
            app:layout_constraintTop_toBottomOf="@+id/signin_pw" android:layout_marginTop="8dp"
            android:id="@+id/Signin_autoin"/>
    <Button
            android:text="로그인"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/btn_btin"
            app:layout_constraintStart_toStartOf="@+id/signin_pw"
            app:layout_constraintEnd_toEndOf="@+id/signin_pw" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/signin_pw" android:layout_marginTop="60dp"/>
    <TextView
            android:text="아직 계정이 없으신가요?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            android:textSize="16sp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_btin"
            android:layout_marginTop="36dp" android:layout_marginStart="168dp"/>
    <TextView
            android:text="회원가입"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/signin_move"
            android:textSize="16sp" android:textColor="#000000" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_btin"
            android:layout_marginTop="36dp" android:layout_marginEnd="200dp"/>
    <com.google.android.gms.common.SignInButton
            android:id="@+id/googlesignin"
            android:layout_width="380dp"
            android:layout_height="60dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_btin"
            android:layout_marginTop="120dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ImageButton
            android:id="@+id/kakao_login_button"
            android:layout_width="380dp"
            android:layout_height="60dp"
            android:src="@drawable/kakao_login_large_narrow"
            android:background="@android:color/transparent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="@+id/googlesignin"
            app:layout_constraintEnd_toEndOf="@+id/googlesignin" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/googlesignin"/>
</androidx.constraintlayout.widget.ConstraintLayout>