<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:openDrawer="start">

<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <TextView
            android:id="@+id/offTitleTextView"
            android:text="오프 신청"
            android:layout_width="312dp"
            android:layout_height="71dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:textSize="34sp"
            app:layout_constraintHorizontal_bias="0.718"/>
    <CalendarView
            android:id="@+id/offCalendarView"
            android:layout_width="542dp"
            android:layout_height="453dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/offTitleTextView"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"/>


    <TextView
            android:id="@+id/offTextView"
            android:text="해당 날짜 클릭시 오프 여부"
            android:layout_width="562dp"
            android:layout_height="138dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/offCalendarView"
            android:layout_marginTop="32dp" app:layout_constraintHorizontal_bias="0.578"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
    <Button
            android:id="@+id/offSaveBtn"
            android:text="오프 신청"
            android:textColor="@color/white"
            android:background="@drawable/button_round"
            android:layout_width="189dp"
            android:layout_height="89dp"
            android:layout_weight="1"/>
        <Button
                android:id="@+id/offCancleBtn"
                android:text="오프 취소"
                android:background="@drawable/button_round_original"
                android:layout_width="189dp"
                android:layout_height="89dp"
                android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>

    <include
            layout="@layout/ham_appbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />



    <com.google.android.material.navigation.NavigationView
            android:id="@+id/nav_Offday"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:menu="@menu/ham_menu_list"
            android:fitsSystemWindows="true"
            app:headerLayout="@layout/ham_header"/>

</androidx.drawerlayout.widget.DrawerLayout>