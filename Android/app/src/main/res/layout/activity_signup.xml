<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:id="@+id/id_check">

    <ImageView
            android:background="@drawable/ic_logo_ho"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="112dp"/>
    <EditText
            android:layout_width="450dp"
            android:layout_height="48dp"
            android:inputType="textPersonName"
            android:ems="10"

            android:id="@+id/signup_id" android:hint="아이디를 입력해주세요"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="252dp" android:textSize="12sp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/signup_phonenumber"
            app:layout_constraintTop_toBottomOf="@+id/signup_name" app:layout_constraintEnd_toEndOf="@+id/signup_name"
            app:layout_constraintStart_toStartOf="@+id/signup_name" android:layout_marginTop="25dp"
            android:hint="휴대폰번호를 입력해주세요" android:textSize="12sp" app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="450dp"
            android:layout_height="48dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/signup_email"
            android:hint="이메일을 입력해주세요"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/signup_phonenumber"
            app:layout_constraintEnd_toEndOf="@+id/signup_phonenumber"
            app:layout_constraintTop_toBottomOf="@+id/signup_phonenumber" android:layout_marginTop="25dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="회원가입"
            android:layout_width="0dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="17dp"
            android:background="@drawable/button_round"
            android:layout_height="50dp" android:id="@+id/btn_btup"
            app:layout_constraintEnd_toEndOf="@+id/signup_email"
            app:layout_constraintStart_toStartOf="@+id/signup_phonenumber"
            app:layout_constraintTop_toBottomOf="@+id/signup_email" android:layout_marginTop="52dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/signup_pw"
            android:textSize="12sp" android:hint="비밀번호를 입력해주세요"
            app:layout_constraintTop_toBottomOf="@+id/signup_id" app:layout_constraintStart_toStartOf="@+id/signup_id"
            app:layout_constraintEnd_toEndOf="@+id/signup_id" android:layout_marginTop="25dp"
            app:layout_constraintHorizontal_bias="1.0"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:gravity="left"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/signup_name"
            android:hint="이름를 입력해주세요"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/signup_pw"
            app:layout_constraintEnd_toEndOf="@+id/signup_pw"
            app:layout_constraintTop_toBottomOf="@+id/signup_pw" android:layout_marginTop="25dp"
            app:layout_constraintHorizontal_bias="0.0"/>


    <TextView
            android:id="@+id/id_checkup"
            android:text=""
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="left"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="3dp"
            android:textColor="@color/pointred"
            app:layout_constraintStart_toStartOf="@+id/signup_id" app:layout_constraintTop_toBottomOf="@+id/signup_id"
            />
    <TextView
            android:id="@+id/pwid_checkup"
            android:text=""
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="left"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="3dp"
            android:textColor="@color/pointred"
            app:layout_constraintTop_toBottomOf="@+id/signup_pw" app:layout_constraintStart_toStartOf="@+id/signup_pw"/>
    <TextView
            android:id="@+id/nameid_checkup"
            android:text=""
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="left"
            android:layout_marginLeft="3dp"
            android:textColor="@color/pointred"
            app:layout_constraintTop_toBottomOf="@+id/signup_name"
            app:layout_constraintStart_toStartOf="@+id/signup_name"
            android:layout_marginTop="4dp"/>
    <TextView
            android:id="@+id/phoneid_checkup"
            android:text=""
            android:layout_width="wrap_content"
            android:gravity="left"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/signup_phonenumber"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="3dp"
            android:textColor="@color/pointred"
            app:layout_constraintBottom_toTopOf="@+id/signup_email"
            app:layout_constraintStart_toStartOf="@+id/signup_phonenumber"
            app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:id="@+id/emailid_checkup"
            android:text=""
            android:layout_width="wrap_content"
            android:gravity="left"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="3dp"
            android:textColor="@color/pointred"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/signup_email"
            app:layout_constraintStart_toStartOf="@+id/signup_email"/>

</androidx.constraintlayout.widget.ConstraintLayout>