<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="450dp"
            android:layout_height="48dp"
            android:inputType="textPersonName"
            android:ems="10"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/signin_email" android:hint="이메일을 입력해주세요" android:layout_marginTop="120dp"
            android:layout_marginStart="40dp" android:layout_marginEnd="40dp" android:textSize="12sp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/signup_pw"
            android:hint="비밀번호를 입력해주세요" app:layout_constraintEnd_toEndOf="@+id/signin_email"
            app:layout_constraintStart_toStartOf="@+id/signin_email" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/signin_email" android:textSize="12sp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/signup_name"
            android:hint="이름를 입력해주세요" app:layout_constraintEnd_toEndOf="@+id/signin_email"
            app:layout_constraintStart_toStartOf="@+id/signin_email"
            app:layout_constraintTop_toBottomOf="@+id/signup_pw" android:textSize="12sp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/signup_phonenumber"
            app:layout_constraintTop_toBottomOf="@+id/signup_name" app:layout_constraintEnd_toEndOf="@+id/signup_name"
            app:layout_constraintStart_toStartOf="@+id/signup_name" android:layout_marginTop="8dp"
            android:hint="휴대폰번호를 입력해주세요" android:textSize="14sp"/>
    <Button
            android:text="회원가입"
            android:layout_width="0dp"
            android:layout_height="50dp" android:id="@+id/btn_signupbtn"
            app:layout_constraintEnd_toEndOf="@+id/signup_phonenumber"
            app:layout_constraintStart_toStartOf="@+id/signup_phonenumber"
            app:layout_constraintTop_toBottomOf="@+id/signup_phonenumber" android:layout_marginTop="30dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>