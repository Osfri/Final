<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".chat.fragment.PeopleFragment">

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/peoplefragment_recyclerview"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:src="@drawable/outline_forum_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/pointred"
            android:clickable="true" android:id="@+id/peoplefragment_floatingActionButton" app:fabSize="normal"
            android:layout_gravity="bottom|right" android:visibility="visible" android:layout_marginBottom="100dp"
            android:layout_marginRight="30dp"/>

</FrameLayout>