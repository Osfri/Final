<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="70dp">
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/outline_chat_24"
            android:id="@+id/chatitem_imageview"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="30dp"
            app:layout_constraintVertical_bias="0.543"/>
    <TextView
            android:text="방이름"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/chatitem_title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="30dp" app:layout_constraintStart_toEndOf="@+id/chatitem_imageview"
            android:textStyle="bold" android:textSize="20sp" app:layout_constraintVertical_bias="0.511"/>
    <TextView
            android:text="마지막 메시지"
            android:layout_width="291dp"
            android:layout_height="19dp" android:id="@+id/chatitem_lastmsg"
            android:layout_marginStart="30dp"
            app:layout_constraintStart_toEndOf="@+id/chatitem_title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.509"
    />
    <TextView
            android:text="2022.22.22 22:22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/chatitem_lastmsg_time"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:textSize="10sp"
            app:layout_constraintStart_toEndOf="@+id/chatitem_lastmsg"/>


    <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#D6D6D6"
            android:layout_gravity="center"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="30dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>