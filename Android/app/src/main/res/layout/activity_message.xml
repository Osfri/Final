<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".chat.MessageActivity">
    <Button
            android:text="전송"
            android:layout_width="100dp"
            android:layout_height="50dp" android:id="@+id/messageActivity_sendBtn"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/messageActivity_recyclerView"/>
    <EditText
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/messageActivity_editMsg"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="20dp"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/messageActivity_recyclerView"/>
    <TextView
            android:text="상대방"
            android:layout_width="wrap_content"
            android:layout_height="50dp" android:id="@+id/messageActivity_selectUser"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="10dp"
            android:gravity="center_vertical" android:textStyle="bold"
            android:textSize="20sp" android:layout_marginStart="10dp"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="600dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/messageActivity_recyclerView"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/messageActivity_selectUser"/>
    <Button
            android:text="대화방 나가기"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/messageActivity_chatExitBtn"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp" android:layout_marginEnd="10dp" app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>