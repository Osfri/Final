<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        tools:context=".MainActivity">


    <TextView
            android:id="@+id/bbsRecycleViewTitle"
            android:text="타이틀"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="36dp"/>
    <TextView
            android:id="@+id/bbsRecycleViewdate"
            android:text="날짜"
            android:textSize="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/bbsRecycleViewId"
            android:layout_marginStart="20dp" app:layout_constraintTop_toTopOf="@+id/bbsRecycleViewId"
    />
    <TextView
            android:id="@+id/bbsRecycleViewCount"
            android:text="조회수"
            android:textSize="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/bbsRecycleViewdate"
            app:layout_constraintTop_toTopOf="@+id/bbsRecycleViewdate"
            android:layout_marginStart="20dp"/>
    <TextView
            android:id="@+id/bbsRecycleViewId"
            android:text="아이디"
            android:layout_width="wrap_content"
            android:textSize="13dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="@+id/bbsRecycleViewTitle"
            app:layout_constraintTop_toBottomOf="@+id/bbsRecycleViewTitle"/>

    <!-- view = 선 한줄 -->
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D6D6D6"
            tools:ignore="MissingConstraints" tools:layout_editor_absoluteX="30dp"
            app:layout_constraintBottom_toBottomOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>