<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        tools:context=".MainActivity">


    <TextView
            android:id="@+id/bbsRecycleViewTitle"
            android:text="타이틀"
            android:layout_width="530dp"
            android:layout_height="28dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginStart="36dp"/>
    <TextView
            android:id="@+id/bbsRecycleViewId"
            android:text="아이디"
            android:layout_width="119dp"
            android:textSize="10dp"
            android:layout_height="38dp"
            app:layout_constraintStart_toStartOf="@+id/bbsRecycleViewTitle"
            app:layout_constraintTop_toBottomOf="@+id/bbsRecycleViewTitle"/>
    <TextView
            android:id="@+id/bbsRecycleViewdate"
            android:text="날짜"
            android:textSize="10dp"
            android:layout_width="119dp"
            android:layout_height="38dp"
            app:layout_constraintStart_toEndOf="@+id/bbsRecycleViewId"
            app:layout_constraintTop_toTopOf="@+id/bbsRecycleViewId"/>
    <TextView
            android:id="@+id/bbsRecycleViewCount"
            android:text="조회수"
            android:textSize="10dp"
            android:layout_width="102dp"
            android:layout_height="37dp"
            app:layout_constraintStart_toEndOf="@+id/bbsRecycleViewdate"
            app:layout_constraintTop_toTopOf="@+id/bbsRecycleViewdate"/>

    <!-- view = 선 한줄 -->
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="#D6D6D6" tools:ignore="MissingConstraints"/>



</androidx.constraintlayout.widget.ConstraintLayout>