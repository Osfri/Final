<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="200dp">


    <!-- view = 선 한줄 -->
    <TextView
            android:id="@+id/bbsCommentRecycleViewWriter"
            android:text="작성자 표시"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:textSize="13dp"
            android:textColor="@color/pointred"
            app:layout_constraintTop_toTopOf="@+id/bbsCommentRecycleViewId"
            app:layout_constraintStart_toEndOf="@+id/bbsCommentRecycleViewId"
            android:layout_marginStart="13dp"/>
    <Button
            android:id="@+id/bbsCommentRecycleViewDelete"
            android:text="삭제"
            android:textColor="@color/white"
            android:background="@drawable/button_round"
            android:layout_width="73dp"
            android:layout_height="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/bbsCommentRecycleViewWriter"
            android:layout_marginEnd="28dp"/>
    <Button
            android:id="@+id/bbsCommentRecycleViewUpdate"
            android:text="수정"
            android:textColor="@color/white"
            android:background="@drawable/button_round_original"
            android:layout_width="73dp"
            android:layout_height="32dp"
            app:layout_constraintTop_toTopOf="@+id/bbsCommentRecycleViewWriter"
            app:layout_constraintEnd_toStartOf="@+id/bbsCommentRecycleViewDelete"
            android:layout_marginEnd="10dp"/>
    <TextView
            android:id="@+id/bbsCommentRecycleViewId"
            android:text="아이디(닉네임)"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="28dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"/>
    <TextView
            android:id="@+id/bbsCommentRecycleViewDate"
            android:text="날짜"
            android:textSize="10dp"
            android:layout_width="190dp"
            android:layout_height="17dp"
            app:layout_constraintTop_toTopOf="@+id/bbsCommentRecycleViewId"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="@+id/bbsCommentRecycleViewId"/>
    <TextView
            android:id="@+id/bbsCommentRecycleViewContent"
            android:text="댓글내용입니다 굉장히 길게 쓴 경우를 대비한 내용입니다댓글내용입니다 굉장히 길게 쓴 경우를 대비한 내용입니다댓글내용입니다 굉장히 길게 쓴 경우를 대비한 내용입니다댓글내용입니다 굉장히 길게 쓴 경우를 대비한 내용입니다댓글내용입니다 굉장히 길게 쓴 경우를 대비한 내용입니다댓글내용입니다 굉장히 길게 쓴 경우를 대비한 내용입니다댓글내용입니다 굉장히 길게 쓴 경우를 대비한 내용입니다댓글내용입니다 굉장히 길게 쓴 경우를 대비한 내용입니다"
            android:layout_width="537dp"
            android:textSize="10dp"
            android:layout_height="54dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintTop_toBottomOf="@+id/bbsCommentRecycleViewDate"
            app:layout_constraintStart_toStartOf="@+id/bbsCommentRecycleViewDate" android:layout_marginTop="4dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.184"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D6D6D6"
            tools:ignore="MissingConstraints" tools:layout_editor_absoluteY="135dp"
            tools:layout_editor_absoluteX="0dp" android:id="@+id/view2"/>
    <EditText
            android:id="@+id/bbsCommentRecycleViewUpdateText"
            android:layout_width="448dp"
            android:layout_height="42dp"
            android:inputType="textPersonName"
            android:text="댓글수정"
            android:ems="10"
            android:layout_marginTop="11dp"
            app:layout_constraintTop_toBottomOf="@+id/view2" android:layout_marginEnd="124dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="28dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="11dp"/>
    <Button
            android:text="수정완료"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bbsCommentRecycleViewUpdateDone"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@+id/view2"
            android:layout_marginEnd="28dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/bbsCommentRecycleViewUpdateText"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="10dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>