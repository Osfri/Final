<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="170dp">


    <!-- view = 선 한줄 -->
    <TextView
            android:id="@+id/bbsCommentRecycleViewWriter"
            android:text="작성자"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:textSize="11dp"
            android:textColor="@color/pointred"
            app:layout_constraintTop_toTopOf="@+id/bbsCommentRecycleViewId"
            app:layout_constraintStart_toEndOf="@+id/bbsCommentRecycleViewId"
            android:layout_marginStart="13dp"/>
    <Button
            android:id="@+id/bbsCommentRecycleViewDelete"
            android:text="삭제"
            android:background="#00ff0000"
            android:textColor="@color/pointred"
            android:textStyle="bold"
            android:layout_width="73dp"
            android:layout_height="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/bbsCommentRecycleViewWriter"
            android:layout_marginEnd="4dp"/>
    <Button
            android:id="@+id/bbsCommentRecycleViewUpdate"
            android:text="수정"
            android:background="#00ff0000"
            android:textColor="@color/likeblue"
            android:textStyle="bold"
            android:textSize="14dp"
            android:layout_width="73dp"
            android:layout_height="32dp"
            app:layout_constraintTop_toTopOf="@+id/bbsCommentRecycleViewWriter"
            app:layout_constraintEnd_toStartOf="@+id/bbsCommentRecycleViewDelete"
    />
    <TextView
            android:id="@+id/bbsCommentRecycleViewId"
            android:text="아이디(닉네임)"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:textStyle="bold"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="28dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"/>
    <TextView
            android:id="@+id/bbsCommentRecycleViewDate"
            android:text="날짜"
            android:textSize="12dp"
            android:layout_width="190dp"
            android:layout_height="17dp"
            app:layout_constraintTop_toTopOf="@+id/bbsCommentRecycleViewId"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="@+id/bbsCommentRecycleViewId"/>
    <TextView
            android:id="@+id/bbsCommentRecycleViewContent"
            android:text="1"
            android:layout_width="537dp"
            android:textSize="15dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/bbsCommentRecycleViewDate"
            app:layout_constraintStart_toStartOf="@+id/bbsCommentRecycleViewDate" android:layout_marginTop="4dp"
    />
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D6D6D6"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp"
            android:id="@+id/view2"
            app:layout_constraintTop_toTopOf="parent"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D6D6D6"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp"
            android:id="@+id/view3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bbsCommentRecycleViewContent"
            app:layout_constraintVertical_bias="0.152"/>
    <EditText
            android:id="@+id/bbsCommentRecycleViewUpdateText"
            android:layout_width="400dp"
            android:layout_height="39dp"
            android:textSize="15dp"
            android:inputType="textPersonName"
            android:text="댓글수정"
            android:ems="10"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@+id/view3"
            app:layout_constraintVertical_bias="0.947"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/view3" app:layout_constraintHorizontal_bias="0.14"/>
    <Button
            android:text="댓글수정"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:id="@+id/bbsCommentRecycleViewUpdateDone"
            android:textColor="@color/white"
            android:background="@drawable/button_round"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view3"
            app:layout_constraintBottom_toBottomOf="@+id/bbsCommentRecycleViewUpdateText"
            app:layout_constraintVertical_bias="1.0" android:layout_marginEnd="4dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>