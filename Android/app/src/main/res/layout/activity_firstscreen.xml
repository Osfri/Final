<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/silver"
        tools:context=".MainActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="601dp"
            android:layout_height="150dp"
            android:background="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
    >
        <Button
                android:text="Sign up"
                android:layout_width="240dp"
                android:layout_height="140dp" android:id="@+id/btn_signup"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="40dp"
                android:textAllCaps="false"


        />
        <Button
                android:text="Sigh in"
                android:layout_width="240dp"
                android:layout_height="140dp"
                android:id="@+id/btn_signin"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="40dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.513"
                android:textAllCaps="false"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
            android:text="병원 듀티"
            android:layout_width="324dp"
            android:layout_height="123dp" android:id="@+id/textView2" tools:layout_editor_absoluteY="617dp"
            android:textSize="65sp" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="72dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>