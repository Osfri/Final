<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".bbs.BbsDetail">


    <TextView
            android:id="@+id/bbsDetailId"
            android:text="아이디"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_width="189dp"
            android:layout_height="71dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.253"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="196dp"/>
    <TextView
            android:id="@+id/bbsDetailCount"
            android:text="조회수"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_width="189dp"
            android:layout_height="71dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.756"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="196dp"/>
    <TextView
            android:id="@+id/bbsDetailTitle"
            android:text="제목"
            android:layout_width="393dp"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_height="72dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bbsDetailId"
            android:layout_marginTop="68dp"/>
    <TextView
            android:id="@+id/bbsDetailContent"
            android:text="내용"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_width="401dp"
            android:layout_height="201dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bbsDetailTitle"
            android:layout_marginTop="56dp"
            app:layout_constraintHorizontal_bias="0.497"/>
    <Button
            android:id="@+id/bbsDetailBack"
            android:text="돌아가기"
            android:layout_width="317dp"
            android:layout_height="104dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="60dp" android:layout_marginEnd="140dp"/>
    <Button
            android:text="수정하기"
            android:layout_width="204dp"
            android:layout_height="102dp" android:id="@+id/detailUpdateBtn"
            app:layout_constraintTop_toBottomOf="@+id/bbsDetailContent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp" android:layout_marginStart="96dp"/>
    <Button
            android:text="삭제"
            android:layout_width="204dp"
            android:layout_height="102dp" android:id="@+id/detailDeleteBtn"
            app:layout_constraintTop_toBottomOf="@+id/bbsDetailContent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp" android:layout_marginStart="320dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>