<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:openDrawer="start">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".LinearActivity">

        <Button
                android:id="@+id/bbsDetailBack"
                android:text="목록으로 돌아가기"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="75dp"
                android:backgroundTint="#ED3717"
                android:textColor="#ffffff"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:id="@+id/bbsDetailTitle"
                android:text="제목"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_gravity="center_vertical"
                android:textSize="25dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bbsDetailId"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    tools:context=".LinearActivity">

                <TextView
                        android:id="@+id/bbsDetailId"
                        android:text="아이디"
                        android:gravity="left"
                        android:textSize="15dp"
                        android:layout_width="150dp"
                        android:layout_height="71dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="20dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintHorizontal_bias="0.253"
                        app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                        android:id="@+id/bbsDetailDate"
                        android:hint="날짜"
                        android:gravity="left"
                        android:textSize="15dp"
                        android:layout_width="189dp"
                        android:layout_height="71dp"
                        android:layout_marginRight="20dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintHorizontal_bias="0.756"
                        app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                        android:id="@+id/bbsDetailCount"
                        android:text="조회수"
                        android:gravity="left"
                        android:textSize="15dp"
                        android:layout_width="100dp"
                        android:layout_height="71dp"
                        android:layout_marginRight="20dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintHorizontal_bias="0.756"
                        app:layout_constraintTop_toTopOf="parent"/>


            </LinearLayout>
        <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#D6D6D6"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center"/>

        <TextView
                android:id="@+id/bbsDetailContent"
                android:text="내용"
                android:textSize="20dp"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bbsDetailTitle"
                app:layout_constraintHorizontal_bias="0.497"/>




    </LinearLayout>
<!--    <Button
            android:text="수정하기"
            android:layout_width="204dp"
            android:layout_height="102dp" android:id="@+id/detailUpdateBtn"
            app:layout_constraintTop_toBottomOf="@+id/bbsDetailContent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp" android:layout_marginStart="96dp"/>
    <Button
            android:text="삭제"
            android:layout_width="204dp"
            android:layout_height="102dp" android:id="@+id/detailDeleteBtn"
            app:layout_constraintTop_toBottomOf="@+id/bbsDetailContent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp" android:layout_marginStart="320dp"/>-->


    <include
            layout="@layout/ham_appbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    <com.google.android.material.navigation.NavigationView
            android:id="@+id/nav_Bbs_Detail"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:menu="@menu/ham_menu_list"
            android:fitsSystemWindows="true"
            app:headerLayout="@layout/ham_header"/>



</androidx.drawerlayout.widget.DrawerLayout>